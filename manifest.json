{
    "manifest_version": 3,
    "name": "GoodJob Unlock",
    "version": "1.4",
    "description": "解鎖經驗分享",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.goodjob.life/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.goodjob.life/*"],
        "js": ["content.js"]
      }
    ]
  }